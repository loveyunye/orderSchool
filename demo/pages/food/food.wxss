/* pages/food.wxss */
.foodView {
  color: #333;
  background-color: #fafafa;
  height: 100vh;
  width: 100%;
  overflow-y: scroll;
}

.foodSearch {
  position: fixed;
  top: 0;
  width: 100vw;
  display: flex;
}
.dinnerType {
  width: 20%;
  min-width: 70px;
  text-align: center;
  font-size: 14px;
  background-color: #25C6FC;
  color: #fff;
  position: relative;
  line-height: 40px;
}
.dinnerType::after {
  position: absolute;
  right: 20rpx;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #fff;
  border-top: 1px solid #fff;
  transform: translateY(-50%) rotate(135deg);
  z-index: 200;
}
.dinnerInput {
  width: 80%;
  font-size: 14px;
  background-color: #fff;
  color: #666;
  padding: 10px;
}

.dinner-select {
  position: fixed;
  top: 40px;
   width: 20%;
  min-width: 70px;
  text-align: center;
  font-size: 14px;
  background-color: #25C6FC;
  color: #fff;
  line-height: 40px;
}
.dinner-item {
  border-top: 1px solid #fff;
}

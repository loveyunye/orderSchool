/* pages/orderDetail/orderDetail.wxss */
.order-detail {
  color: #333;
  background-color: #fafafa;
  height: 100vh;
  width: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  font-size: 32rpx;
}
/* 订单信息 */
.order-message {
  padding: 10px 20px;
  background-color: #fff;
}
.dinner-item {
  display: flex;
  justify-content: space-between;
  padding:10px 0;
  border-bottom: 1px solid #f1f1f1;
}
.dinner-item text {
  display: inline-block;
  margin-left: 12px;
  min-width: 30px;
  text-align: center;
  line-height: 50px;
  /* font-size: 15px; */
}
/* title */
.title-order {
  line-height: 50px;
  background-color: #fff;
  /* font-weight: bold; */
  font-size: 20px;
  padding-left: 10px;
}
.title-message {
  padding-left: 20px;
  background-color: #fff;
  line-height: 40px;
  font-size: 32rpx;
}
.title-message-last {
  padding-bottom: 10px;
}
/* 商家信息 */
.business-message {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding:10px 20px;
}
.business-message view {
  display: block;
  margin-left: 12px;
  line-height: 32px;
}
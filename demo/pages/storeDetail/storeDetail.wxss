/* pages/food.wxss */
.storeView {
  color: #333;
   background-color: #fafafa; 
  /* background-color: #000; */
  height: 100vh;
  width: 100%;
  overflow-y: scroll; 
  overflow-x: hidden;
}

.storeMessage {
  position:relative;
}
.name-address {
  width: 100%;
  position: absolute;
  bottom: 5px;
  background-color: rgba(255, 255, 255, 0.6); 
  color: #555;
  line-height: 20px;
  padding:5px 10px;
  font-size: 15px;
  /* background-color:#1296db; */
}

.dinner-select {
  width: 100%;
  min-width: 70px;
  text-align: center;
  font-size: 14px;
  background-color: #fff;
  color: #ccc;
  line-height: 30px;
  display: flex;
  justify-content: space-between;
}
.dinner-item {
  /* border-top: 1px solid #fff; */
  display: block;
  width: 19.5%;
  background-color: #25C6FC;
}
.select-item {
  color: #fff;
}

.food-list {
  margin-bottom: 50px;
}
.food-item {
  background-color: #fff;
  margin-bottom: 6px;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.food-message {
  min-width: 150px;
  font-size: 15px;
  line-height: 25px;
}
.food-message view text:nth-child(1){
    color: #25C6FC;
}
.food-message view text:nth-child(2){
  display: inline-block;
  width: 100px;
}
.add-food {
  height: 30px;
  width: 30px;
  font-size: 24px;
  line-height: 30px;
  text-align: center;
  color: #fff;
  background-color: #67c23a;
  border-radius: 15px;
}
.delete-food {
  background-color: #f56c6c;
}

/* 底部 bottom */
.bottom_order {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 46px;
  background-color: #1296db;
  line-height: 46px;
  color: #fff;
  padding-left: 40px;
}
.selectDinner {
  position: absolute;
  bottom: 46px;
  width: 100vw;
  line-height: 50px;
  max-height: 200px;
  overflow-y: scroll;
  left: 0;
  background-color: #fff;
  
}
.selectItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color:#1296db;
  padding: 0px 10px;
  margin-bottom: 1px;  
}
.selectItem text {
  display: inline-block;
  margin-left: 10px;
}
.go_order {
  position: absolute;
  right: 60px;
  top: 0;
}
.disable_order {
  color: #ccc;
}
.go_order::after {
  position: absolute;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #eee;
  border-top: 1px solid #eee;
  transform: translateY(-50%) rotate(135deg);
}
.detail-order::before {
  position: absolute;
  top: 50%;
  left: 20px;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #fff;
  border-top: 1px solid #fff;
  transform: translateY(-50%) rotate(45deg);
}
/* 样式 */
.detail-up::before {
  transform: translateY(-50%) rotate(225deg);
}
.order-disable {
  color: #ccc;
}

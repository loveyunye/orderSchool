/* pages/order/order.wxss */
.container {
  width: 100vw;
  height: 100vh;
  color: #333;
  /* background-color: #f3f3f3; */
}
.order {
  width: 100%;
  padding:0 10px;
  overflow: hidden;
  /* border-bottom: 1px solid #f3f3f3; */
  display: flex;
  background-color: #fff;
  margin-bottom: 5px;
  padding-top: 10px;
}
view.avatar {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  margin-right: 10px;
}
image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 4px;
}

view.message {
  /* height: 28px; */
  width:  -moz-calc(100% - (32px + 128rpx));
  width: -webkit-calc(100% - (32px + 128rpx));
  border-bottom: 1px solid #f1f1f1;

}
.shopname{
  position: relative;
}
.shopname ::after {
  position: absolute;
  right: 30rpx;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #888;
  border-top: 1px solid #888;
  transform: translateY(-50%) rotate(135deg);
}

.shopname .btn{
   width:100%;
   border:none;
   border-radius: 0;
   padding:0;
   margin:0;
   font-size: 0.85em;
   /* position: static; */
   line-height: normal;
   color: #333;
   text-align: left;
   background: #fff;
}
.orderDate {
  color: #999;
  font-size: 0.7em;
  line-height: 2em;
}
.dinnerName {
  padding: 5px 5px 20px;
  display: flex;
  justify-content: space-between;
  font-size: 0.85em;
}
.comment {
  display: flex;
  justify-content: flex-end;
  padding-bottom: 10px;
  position: relative;
}
.comment button{
  border-radius: none;
  padding:3px 10px;
  margin:0 7px;
  font-size: 0.7em;
  /* position: static; */
  line-height: normal;
  color: #333;
  text-align: left;
  background: #fff;
  /* border: 1px solid #f0f0f0; */

}

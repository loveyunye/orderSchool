.container {
  width: 100vw;
  height: 100vh;
  background: #f3f3f3;
  border: none;
} 
.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #1296db;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: 100% 300rpx;
  height: 300rpx;
  overflow: hidden;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 3px #fff solid;
}

.order-item {
  width: 50%;
  text-align: center;
}

.order-item image {
  width: 84rpx;
  height: 84rpx;
  margin-bottom: 6rpx;
}

.order-item view {
  color: #333;
  font-size: 28rpx;
}

.other {
  margin-top: 20rpx;
  background: #fff;
}

.other-item {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}

.other-item::after {
  position: absolute;
  right: 30rpx;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #ccc;
  border-top: 1px solid #ccc;
  transform: translateY(-50%) rotate(135deg);
}

.other .btn{
   width:100%;
   border:none;
   border-radius: 0;
   padding:0;
   margin:0;
   font-size: 1em;
   position: static;
   line-height: normal;
   color: #333;
   text-align: left;
   background: #fff;
}
.other .btn::after{
  content: none;
}
.other .iconfont{
  display: inline-block;
  line-height: 100rpx;
  margin-right: 8rpx;
  font-size: 32rpx;
  color: #333;
}